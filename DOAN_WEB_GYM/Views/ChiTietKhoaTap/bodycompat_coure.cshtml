<body>

    <!-- Page Header Start -->
    <div class="container-fluid bodycompat-header mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5" style="min-height: 400px">
            <h4 class="display-4 mb-3 mt-0 mt-lg-5 text-white text-uppercase font-weight-bold">BODY COMPAT</h4>
            <div class="d-inline-flex">
                <p class="m-0 text-white"><a class="text-white" href="@Url.Action("Index", "GYM")">Trang Chủ</a></p>
                <p class="m-0 text-white px-2">/</p>
