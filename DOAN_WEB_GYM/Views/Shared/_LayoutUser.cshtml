

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - My GYM</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/shop-homepage.css" rel="stylesheet">

</head>
<body>
    <div class="bg-white">
        <!-- Navbar Start -->
        <div class="container-fluid p-0 nav-bar">
            <nav class="navbar navbar-expand-lg bg-none navbar-dark py-3">
                <a href="" class="navbar-brand">
                    <h1 class="m-0 display-4 font-weight-bold text-uppercase text-white">WIBUGYM</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav ml-auto p-4 bg-secondary">
                        @*Home*@
                        <a href="@Url.Action("Index", "GYM")" class="nav-item nav-link">Trang Chủ</a>
                        @*About Us*@
                        <a href="@Url.Action("Chungtoi", "ChungToi")" class="nav-item nav-link">Chúng Tôi</a>
                        @*Our Features*@
                        <a href="@Url.Action("CLB", "CauLacBo")" class="nav-item nav-link">CLB</a>
                        @*Classes*@
                        <a href="@Url.Action("LichHoc", "KhoaTap")" class="nav-item nav-link">Lịch Học</a>
                        @*Pages*@
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Tin Tức</a>
                            <div class="dropdown-menu text-capitalize">
                                @*Blog Grid*@
                                <a href="@Url.Action("Blog","TinTuc")" class="dropdown-item">Blog</a>
                                @*Event*@
                                <a href="@Url.Action("SuKien","TinTuc")" class="dropdown-item">Sự Kiện</a>
                                @*Blog Detail*@
                                <a href="@Url.Action("KienThucSucKhoe","TinTuc")" class="dropdown-item">Kiến thức – Sức khỏe</a>
                            </div>
                        </div>
                        @*Contact*@
                        <a href="@Url.Action("Contact", "LienHe")" class="nav-item nav-link">Liên hệ</a>
                    </div>
                </div>
            </nav>
        </div>
        @RenderBody()
        <!-- Navbar End -->
        <!-- Footer Start -->
        <div class="footer container-fluid mt-5 py-5 px-sm-3 px-md-5 text-white">
            <div class="row pt-5">
                <div class="col-lg-3 col-md-6 mb-5">
                    <h4 class="text-primary">Liên Hệ</h4>
                    <p><i class="fa fa-map-marker"></i>10/80C XL Hà Nội, Phường Tân Phú, Thủ Đức, Thành phố Hồ Chí Minh</p>
                    <p><i class="fa fa-phone"></i>+0358125654</p>
                    <p><i class="fa fa-envelope"></i>wibugym@gmail.com</p>
                    <div class="d-flex justify-content-start">
                        <a class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 40px; height: 40px;" href="#"><i class="fa fa-instagram"></i></a>
                        <a class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 40px; height: 40px;" href="#"><i class="fa fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-5">
                    <h4 class="text-primary mb-4">Đến Các Trang</h4>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-white mb-2" href="@Url.Action("Index", "GYM")"><i class="fa fa-angle-right mr-2"></i>Trang Chủ</a>
                        <a class="text-white mb-2" href="@Url.Action("Chungtoi", "ChungToi")"><i class="fa fa-angle-right mr-2"></i>Chúng Tôi</a>
                        <a class="text-white mb-2" href="@Url.Action("CLB", "CauLacBo")"><i class="fa fa-angle-right mr-2"></i>CLB</a>
                        <a class="text-white mb-2" href="@Url.Action("LichHoc", "KhoaTap")"><i class="fa fa-angle-right mr-2"></i>Lịch Học</a>
                        <a class="text-white" href="@Url.Action("Contact", "LienHe")"><i class="fa fa-angle-right mr-2"></i>Liên Hệ</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-5">
                    <h4 class="text-primary mb-4">Các Khóa Học</h4>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-white mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Yoga</a>
                        <a class="text-white mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>KickFit</a>
                        <a class="text-white mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Dance</a>
                        <a class="text-white mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Physical Therapy</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-5">
                    <h4 class="text-primary mb-4">Giờ Mở Cửa</h4>
                    <h5 class="text-white">Thứ Hai - Thứ Sáu</h5>
                    <p>8.00 AM - 8.00 PM</p>
                    <h5 class="text-white">Thứ Bảy - Chủ Nhật</h5>
                    <p>2.00 PM - 8.00 PM</p>
                </div>
            </div>
            <div class="container border-top border-dark pt-5">
                <p class="m-0 text-center text-white">
                    &copy; <a class="text-white font-weight-bold" href="#">WibuGym</a>
                </p>
            </div>
        </div>

        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-outline-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
        <script src="~/Scripts/lib/easing/easing.min.js"></script>
        <script src="~/Scripts/lib/waypoints/waypoints.min.js"></script>

        <!-- Contact Javascript File -->
        <script src="mail/jqBootstrapValidation.min.js"></script>
        <script src="mail/contact.js"></script>

        <!-- Template Javascript -->
        <script src="~/Scripts/js/main.js"></script>

    </div>
</body>
</html>
