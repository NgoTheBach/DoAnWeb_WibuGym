@model IEnumerable<DOAN_WEB_GYM.Models.KhoaTap>

@{
    ViewBag.Title = "ListKhoaTap";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ListKhoaTap</h2>

<p>
    @Html.ActionLink("Thêm khóa tập", "ThemKhoaTap", "Admin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nameCourse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.startDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dueDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descriptionKT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.urlImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idCLB)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nameCourse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dueDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descriptionKT)
        </td>
        <td>
            <img src="@item.urlImg" alt="hinh thumbnail" style="width:50%" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CLB.CLBName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idCourse }) |
            @Html.ActionLink("Details", "Details", new { id=item.idCourse }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idCourse })
        </td>
    </tr>
}

</table>
